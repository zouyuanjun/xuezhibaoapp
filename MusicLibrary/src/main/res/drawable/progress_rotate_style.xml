<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720"
    >

    <shape
        android:innerRadiusRatio="2.3"
        android:shape="ring"
        android:thicknessRatio="18"
        android:useLevel="false">

        <size
            android:width="44dp"
            android:height="44dp" />

        <gradient
            android:centerColor="#e84e40"
            android:centerY="0.5"
            android:endColor="#f87d28"
            android:startColor="#F7F7F7"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>