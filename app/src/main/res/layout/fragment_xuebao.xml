<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zou.fastlibrary.ui.CustomNavigatorBar
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:leftTextVisible='false'
            app:leftImageVisiable='false'
            app:midText='学宝'
            app:midTextFontColor="#ffffff"
            app:midTextSizeSp="18"
            app:rightImageVisible='false'
            app:rightTextVisible='false'
            app:titleBarBackground='@color/appcolor'></com.zou.fastlibrary.ui.CustomNavigatorBar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="154dp" />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:orientation="horizontal">
             <ImageView
                 android:id="@+id/im_jiajiao"
                 android:layout_width="120dp"
                 android:layout_height="70dp"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:background="@color/blue"/>
             <ImageView
                 android:id="@+id/im_xueke"
                 android:layout_width="120dp"
                 android:layout_height="70dp"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:background="@color/green"/>
         </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="@color/appcolor"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:paddingLeft="12dp"
                    android:text="热门课程"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:paddingLeft="12dp"
                    android:text="更多"/>

                <ImageView
                    android:id="@+id/im_more_video"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/back2_light" />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_hot_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="@color/appcolor"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:paddingLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="最新课程"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:paddingLeft="12dp"
                    android:text="更多"/>
                <ImageView
                    android:id="@+id/im_more_voice"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/back2_light" />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_new_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="@color/appcolor"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:paddingLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="推荐课程"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:paddingLeft="12dp"
                    android:text="更多"/>
                <ImageView
                    android:id="@+id/im_more_article"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/back2_light" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_recommend_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:background="@color/appcolor"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:paddingLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="全部课程"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#999999"
                    android:paddingLeft="12dp"
                    android:text="更多"/>
                <ImageView
                    android:id="@+id/im_more_all_course"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/back2_light" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_all_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView >


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>