<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/back_bg">

    <ImageView
        android:id="@+id/simpleDraweeView"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/mengban"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zou.fastlibrary.ui.ShapeCornerBgView
        android:visibility="gone"
        android:id="@+id/shapeCornerBgView2"
        android:layout_width="34dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:text="试看"
        android:textColor="#12cd8e"
        android:textSize="@dimen/sp_12"
        app:appBgColor="@color/white"
        app:appBorder="true"
        app:appRadius="@dimen/dp_4"
        app:appBorderWidth="1dp"
        app:appBorderColor="#12cd8e"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_title"
        app:layout_constraintStart_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toTopOf="@+id/tv_item_title" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:minLines="1"
        android:singleLine="true"
        android:text="孩子回然只是老师今天没有表扬他"
        android:textColor="@color/color_black_333333"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shapeCornerBgView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="18-02-19 12：21"
        android:textColor="@color/color_grey_999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/im_dianzan"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_dianzan"
        app:layout_constraintTop_toTopOf="@+id/tv_item_time"
        android:background="@drawable/videolist_icon_like" />

    <TextView
        android:id="@+id/tv_dianzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="435"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_time" />

    <ImageView
        android:id="@+id/im_watch_ioc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/home_icon_playback"
        app:layout_constraintBottom_toBottomOf="@+id/tv_readnum"
        app:layout_constraintEnd_toStartOf="@+id/tv_readnum"
        app:layout_constraintTop_toTopOf="@+id/tv_readnum" />

    <TextView
        android:id="@+id/tv_readnum"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="2232"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toTopOf="@+id/simpleDraweeView" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/videolist_icon_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_time"
        app:layout_constraintStart_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toTopOf="@+id/tv_item_time" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:text="主讲：XX老师"
        android:textColor="@color/color_black_666666"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title" />

</android.support.constraint.ConstraintLayout>