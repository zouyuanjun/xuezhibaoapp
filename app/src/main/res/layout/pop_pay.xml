<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="268dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ffffffrad8"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ffffffrad8"
        android:orientation="vertical">
       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:layout_gravity="center">
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/fenge"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"></LinearLayout>

           <RadioGroup
               android:id="@+id/rg_pay"
               android:layout_width="150dp"
               android:layout_height="match_parent"
               android:layout_marginStart="8dp"
               android:layout_marginEnd="8dp"
               android:gravity="center_horizontal"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.0">

               <RadioButton
                   android:id="@+id/rd_alipay"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableLeft="@drawable/alipay"
                   android:drawablePadding="10dp"
                   android:gravity="center"
                   android:textColor="@color/color_black_333333"
                   android:textSize="15sp"
                   android:text="支付宝支付" />

               <RadioButton
                   android:id="@+id/rd_wxpay"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawableLeft="@drawable/wxpay"
                   android:drawablePadding="10dp"
                   android:gravity="center"
                   android:textColor="@color/color_black_333333"
                   android:textSize="15sp"
                   android:text="微信支付" />

           </RadioGroup>
       </android.support.constraint.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fenge"></LinearLayout>
<TextView
    android:id="@+id/tv_cancle"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center"
    android:textColor="@color/color_black_333333"
    android:textSize="15sp"
    android:text="取消支付"/>
    </LinearLayout>
</LinearLayout>
