<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="268dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ffffffrad8"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ffffffrad8"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:background="@color/fenge">
        </LinearLayout>
       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="120dp">

           <ImageView
               android:id="@+id/imageView28"
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:layout_marginStart="16dp"
               android:background="@drawable/alipay"
               app:layout_constraintBottom_toTopOf="@+id/linearLayout16"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:layout_width="36dp"
               android:layout_height="36dp"
               android:layout_marginStart="16dp"
               android:background="@drawable/wxpay"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/linearLayout16" />

           <LinearLayout
               android:orientation="horizontal"
               android:id="@+id/linearLayout16"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/fenge"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"></LinearLayout>

           <RadioGroup
               android:id="@+id/rg_pay"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginStart="8dp"
               android:layout_marginEnd="8dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toEndOf="@+id/imageView28"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.0">

               <RadioButton
                   android:id="@+id/rd_alipay"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:button="@null"
                   android:text="支付宝支付" />

               <RadioButton
                   android:id="@+id/rd_wxpay"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:button="@null"
                   android:drawablePadding="60dp"
                   android:text="微信支付" />

           </RadioGroup>
       </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fenge"></LinearLayout>
    </LinearLayout>
</LinearLayout>
