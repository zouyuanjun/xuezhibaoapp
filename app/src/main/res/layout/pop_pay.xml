<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="268dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ffffffrad8"
    android:orientation="vertical">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ffffffrad8"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="支付88元"
            android:textColor="@color/color_black_333333"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:background="@color/fenge">
        </LinearLayout>
        <RadioGroup
            android:id="@+id/rg_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rd_alipay"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="支付宝支付" />

            <RadioButton
                android:id="@+id/rd_wxpay"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="微信支付" />
        </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fenge"></LinearLayout>

        <com.zou.fastlibrary.ui.ShapeCornerBgView
            android:layout_width="238dp"
            android:id="@+id/tv_pay"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="去支付"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:appBgColor="@color/appcolor"
            app:appRadius="4dp" />
    </LinearLayout>
</LinearLayout>
