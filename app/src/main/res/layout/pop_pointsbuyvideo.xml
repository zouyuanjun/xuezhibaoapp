<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ffffffrad8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="268dp"
        android:layout_height="170dp">
        <TextView
            android:id="@+id/tv_videoprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:text="使用600积分兑换此课程"
            android:textColor="@color/color_black_333333"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mypoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="当前积分："
            android:textColor="@color/appcolor"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_videoprice" />

        <com.zou.fastlibrary.ui.ShapeCornerBgView
            android:id="@+id/scb_apply"
            android:layout_width="238dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:text="确认兑换"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:appBgColor="@color/appcolor"
            app:appRadius="@dimen/dp_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mypoints" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>