<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_bg">

    <ImageView
        android:id="@+id/simpleDraweeView"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="15sp"
        android:lineSpacingExtra="3dp"
        android:maxLines="1"
        android:textColor="@color/color_black_333333"
        android:text="孩子回家不开心竟然只是老师今天没有表扬他"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="主讲：XX老师"
        android:textColor="@color/color_grey_999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
        app:layout_constraintVertical_bias="0.085" />

    <ImageView
        android:id="@+id/im_watch_ioc"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_readnum"
        app:layout_constraintEnd_toStartOf="@+id/tv_readnum"
        app:layout_constraintTop_toTopOf="@+id/tv_readnum"
        app:srcCompat="@drawable/course_icon_people" />

    <TextView
        android:id="@+id/tv_readnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="2232"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toTopOf="@+id/simpleDraweeView" />

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="共16节/"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/simpleDraweeView"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher" />

    <TextView
        android:id="@+id/tv_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="学习5节"
        android:textSize="12sp"
        android:textColor="@color/appcolor"
        app:layout_constraintStart_toEndOf="@+id/tv_all"
        app:layout_constraintTop_toBottomOf="@+id/tv_teacher" />

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="85dp"
        android:layout_height="22dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:background="@drawable/tutor_btn_feedback"
        app:layout_constraintBottom_toBottomOf="@+id/tv_already"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_already">
    </LinearLayout>
</android.support.constraint.ConstraintLayout>