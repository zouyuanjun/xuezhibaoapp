<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fenge"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zou.fastlibrary.ui.CustomNavigatorBar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftTextVisible='false'
        app:midText='测评'
        app:midTextFontColor="#ffffff"
        app:midTextSizeSp="18"
        app:rightImageVisible='false'
        app:rightTextVisible='true'
        app:rightText="提交答案"
        app:rightTextColor="@color/white"
        app:titleBarBackground='@color/appcolor'>
    </com.zou.fastlibrary.ui.CustomNavigatorBar>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="12dp"
        android:lineSpacingExtra="3dp"
        android:text="TextView"
        android:textColor="@color/color_black_333333"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <RadioGroup
        android:background="@drawable/ffffffrad8"
        android:id="@+id/radiogroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <RadioButton
            android:id="@+id/ans1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customdialogbg"
            android:padding="12dp"
            android:text="非常符合"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:textSize="15sp"  />

        <RadioButton
            android:id="@+id/ans2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/customdialogbg"
            android:padding="12dp"
            android:text="有时符合"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:textSize="15sp"  />

        <RadioButton
            android:id="@+id/ans3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/customdialogbg"
            android:padding="12dp"
            android:text="不符合"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:textSize="15sp" />


    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="提示：选择后自动转下一题"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last" />
    <com.zou.fastlibrary.ui.ShapeCornerBgView
        android:id="@+id/last"
        android:layout_width="78dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="上一题"
        android:textColor="@color/white"
        app:appRadius="4dp"
        app:appBgColor="@color/appcolor"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/fenge"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_testtitle"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/evaluation_icon_complete"
                android:drawablePadding="@dimen/dp_10"
                android:lineSpacingExtra="3dp"
                android:text="测评已完成"
                android:textColor="@color/color_black_333333"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="亲爱的家长，感谢您的参与"
                android:textColor="@color/color_black_666666"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_result" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="以下是您的测评结果："
                android:textColor="@color/color_black_666666"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/tv_testresult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ffffffrad8"
                android:lineSpacingExtra="2dp"
                android:padding="12dp"
                android:text="TextView"
                android:textColor="@color/color_black_333333"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView21" />


            <com.zou.fastlibrary.ui.ShapeCornerBgView
                android:id="@+id/scb_back"
                android:layout_width="232dp"
                android:layout_height="44dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="24dp"
                android:text="返回评测列表"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:appBgColor="@color/appcolor"
                app:appRadius="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_testresult" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>


    <TextView
        android:id="@+id/tv_testtitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textColor="@color/color_black_666666"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <TextView
        android:id="@+id/tv_totle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="/9"
        android:textColor="@color/color_grey_999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_crrentindex"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_crrentindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1"
        android:textColor="@color/appcolor"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_totle"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />


</android.support.constraint.ConstraintLayout>